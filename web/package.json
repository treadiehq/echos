{
  "name": "@echos/web",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "nuxt dev",
    "build": "npm run copy-workflows; nuxt build",
    "copy-workflows": "mkdir -p public/workflows && (cp -r ../workflow.yaml ../examples public/workflows/ 2>/dev/null || echo 'Workflow files not found in parent directory, skipping copy')",
    "start": "node .output/server/index.mjs",
    "preview": "nuxt preview"
  },
  "dependencies": {
    "mermaid": "^11.12.1",
    "nuxt": "^3.13.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.6.0"
  }
}
