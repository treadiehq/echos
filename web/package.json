    "start": "node .output/server/index.mjs",
    "preview": "nuxt preview"
  },
  "dependencies": {
    "mermaid": "^11.12.1",
    "nuxt": "^3.13.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/vite": "^4.1.17",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.6.0"
  }
}
